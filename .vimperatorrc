" Map
noremap a A
noremap j 5j
noremap k 5k
noremap J <C-d>
noremap K <C-u>
noremap <F11> gT
noremap <F12> gt
noremap s :stop<CR>
noremap <C-a> <C-v><C-a>
noremap <C-c> <C-v><C-c>
cnoremap <C-a> <C-v><C-a>
cnoremap <C-c> <C-v><C-c>
inoremap <C-a> <C-v><C-a>
inoremap <C-c> <C-v><C-c>
inoremap <C-x> <C-v><C-x>
inoremap <C-v> <C-v><C-v>
noremap <silent> <F2> :js toggle_bar() <CR>

" Javascript
js<<EOF
// Toggle bar
liberator.globalVariables['sx_gopt'] = 'mrT'
toggle_bar = function () {
    toggle_status = liberator.globalVariables['sx_gopt'];
    liberator.globalVariables['sx_gopt'] = (toggle_status == 'r'? 'mrT': 'r');
    liberator.execute('set guioptions=' + toggle_status);
}
EOF

" Options settings
set guioptions=r
set showstatuslinks=2
set titlestring=Iceweasel
set editor=xterm\ -e\ vim

" Enable AwesomeBar
set complete=l
set wildoptions=auto,sort

set nextpattern=\\s*(下一页|下一张|下一篇|下页|后页)\\s*,\\bnext\\b,^>$,^(>>|»)$,^(>|»),(>|»)$,\\bmore\\b
set previouspattern=\\s*(上一页|上一张|上一篇|上页|前页)\\s*,\\b(prev|previous)\\b,^<$,^(<<|«)$,^(<|«),(<|«)$

autocmd LocationChange .* js modes.passAllKeys = /.*(mail\.google\.com|www\.google\.com\/reader).*/.test(buffer.URL)
