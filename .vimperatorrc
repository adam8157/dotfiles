" Map
noremap J <C-d>
noremap K <C-u>
noremap <silent> <F2> :js toggle_bar() <CR>

" Enable AwesomeBar
set complete=l
set wildoptions=auto

set guioptions=r
set showstatuslinks=2
set editor=xterm\ -e\ vim

" Javascript
js<<EOF
// Toggle bar
liberator.globalVariables['sx_gopt'] = 'mrT'
toggle_bar = function () {
    toggle_status = liberator.globalVariables['sx_gopt'];
    liberator.globalVariables['sx_gopt'] = (toggle_status == 'r'? 'mrT': 'r');
    liberator.execute('set guioptions=' + toggle_status);
}
EOF

set nextpattern=s*下一页|下一张|下一篇|下页|后页s*,^bnextb,\\bnext\\b,^>$,^(>>|»)$,^(>|»),(>|»)$,\\bmore\\b
set previouspattern=s*上一页|上一张|上一篇|上页|前页s*,^bprev|previousb,\\bprev|previous\\b,^<$,^(<<|«)$,^(<|«),(<|«)$

autocmd LocationChange .* js modes.passAllKeys = /.*(mail\.google\.com|www\.google\.com\/reader).*/.test(buffer.URL)
