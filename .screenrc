# Sessions
screen
screen -t mutt mutt
screen -t irssi irssi

# Start message
startup_message off

# Disable vbell
vbell off

# Dynamic title
shelltitle '$ |bash'

# Utf-8 handling
defutf8 on

# Hardstatus line
hardstatus alwayslastline
hardstatus string "%{= R}[ %{=b b}%-w%{=rb db}%>%n %t%{-}%+w%{-b}%< %=%{R}][%{M}%D %M %d %{G}%c%{R}]"

# Keyboard binding
bindkey -k F1 prev
bindkey -k F2 next

# Automatically detach on hangup
autodetach on

# Make the xterm scroller work in screen
terminfo xterm* ti@:te@

# Refresh the display when exiting programs
altscreen on
