# Set encoding
defutf8 on

# Disable vbell
vbell off

# Disable login
deflogin off

# Dynamic title
shelltitle '$ |bash'

# Caption String
caption always "%{= R}[ %{=b b}%-w%{=rb db}%>%n %t%{-}%+w%{-b}%< %=%{R}]"

# Set scrollback
defscrollback 10240

# Startup message
startup_message off

# Keyboard binding
bind s
bindkey -k F1 prev
bindkey -k F2 next

# Set xterm's title
hardstatus off
hardstatus string "screen(@%H): %t"
termcapinfo xterm* 'hs:ts=\E]0;:fs=\007:ds=\E]0;\007'

# Set $TERM variable
term screen-256color

# Set message timeout
msgwait 2

# Set mapping timeout
maptimeout 10

# Automatically detach upon hangup
autodetach on

# Make the xterm scroller work in screen
termcapinfo xterm* ti@:te@

# Refresh the display when exiting programs
altscreen on

