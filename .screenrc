# Start message
startup_message off

# Disable vbell
vbell off

# Disable login
deflogin off

# Dynamic title
shelltitle '$ |bash'

# Caption String
caption always "%{= R}[ %{=b b}%-w%{=rb db}%>%n %t%{-}%+w%{-b}%< %=%{R}][%{M}%D %M %d %{G}%c%{R}]"

# Utf-8 handling
defutf8 on

# Keyboard binding
bindkey -k F1 prev
bindkey -k F2 next

# Set xterm's title
hardstatus off
hardstatus string "screen(@%H): %t"
termcapinfo xterm* 'hs:ts=\E]0;:fs=\007:ds=\E]0;\007'

# Automatically detach on hangup
autodetach on

# Make the xterm scroller work in screen
termcapinfo xterm* ti@:te@

# Refresh the display when exiting programs
altscreen on

