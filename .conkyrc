# own_window
own_window yes
own_window_type override
own_window_transparent yes

# background
background yes

# avoid flicker
double_buffer yes

# borders
draw_borders no

# position
gap_y 5
alignment top_middle

# behaviour
update_interval 1

# color
default_color  8f8f8f

# font
use_xft yes
xftfont DejaVu Sans:pixelsize=15

TEXT
CPU: ${color e0e0e0}${cpu cpu0}%, ${cpu cpu1}%, ${cpu cpu2}%, ${cpu cpu3}%${color} | MEM: ${color e0e0e0}$mem / $memmax${color} | TEMP: ${color e0e0e0}${hwmon temp 1}°C${color} | UPTIME: ${color e0e0e0}${uptime_short}${color} | NET: ${color e0e0e0}${downspeed eth0} + ${downspeed wlan0}↓ ${upspeed eth0} + ${upspeed wlan0}↑${color} | VOL: ${color e0e0e0}${mixer}%${if_mixer_mute} Mute${endif}${color} | BAT: ${color e0e0e0}${battery}${color}
