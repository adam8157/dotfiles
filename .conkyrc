#background
background yes

#avoid flicker
double_buffer yes

#borders
draw_borders no

#shades
draw_shades yes

#position
gap_y 3
alignment top_middle

#behaviour
update_interval 1

#colour
default_color  8f8f8f

#font
use_xft yes
xftfont DejaVu Sans:pixelsize=11.5

TEXT
CPU: ${color e0e0e0}${cpu cpu0}%,${cpu cpu1}%${color} | MEM: ${color e0e0e0}$mem / $memmax${color} | TEMP: ${color e0e0e0}${acpitemp}°C${color} | UPTIME: ${color e0e0e0}${uptime_short}${color} | NET: ${color e0e0e0}${downspeed eth0}+ ${downspeed wlan0}↓ ${upspeed eth0}+ ${upspeed wlan0}↑${color} | VOL: ${color e0e0e0}${mixer PCM}%${if_mixer_mute Master} Mute${endif}${color} | BAT: ${color e0e0e0}${battery}${color}
