[user]
	name  = Adam Lee
	email = adam8157@gmail.com
[color]
	branch      = auto
	diff        = auto
	grep        = auto
	interactive = auto
	status      = auto
[push]
	default = upstream
[alias]
	a  = add
	ai = add -i
	c  = commit
	cm = commit --amend
	dc = difftool --cached
	dt = difftool
	lg = log --graph
	lp = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	mt = mergetool
	t  = tag
	ut = rm -r --cached
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[sendemail]
	confirm = always
	suppresscc = self
	thread = true
	chainreplyto = false
	bcc = adam8157@gmail.com
	smtpserver = /usr/bin/msmtp
