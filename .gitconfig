[user]
	name  = Adam Lee
	email = adam8157@gmail.com
[color]
	branch      = auto
	diff        = auto
	grep        = auto
	interactive = auto
	status      = auto
[push]
	default = upstream
[alias]
	a  = add
	ai = add -i
	b  = branch
	c  = commit
	cm = commit --amend
	co = checkout
	dc = difftool --cached
	d  = difftool
	fp = format-patch
	lg = log --graph
	l  = log
	lp = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	m  = mergetool
	rb = rebase
	t  = tag
	ut = rm -r --cached
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[sendemail]
	suppresscc = self
	chainreplyto = false
	bcc = adam8157@gmail.com
	smtpserver = /usr/bin/msmtp
