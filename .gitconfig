[user]
	name  = Adam Lee
	email = adam8157@gmail.com
[color]
	branch      = auto
	diff        = auto
	grep        = auto
	interactive = auto
	status      = auto
[push]
	default = upstream
[alias]
	a  = add
	ai = add -i
	b  = branch
	c  = commit
	ca = commit -a
	co = checkout
	d  = difftool
	dc = difftool --cached
	l  = log
	lg = log --graph
	lp = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen%cr %C(bold blue)<%an>%Creset'
	m  = mergetool
	p  = push
	r  = rebase
	rd = !git ls-files -d |xargs git checkout --
	ri = rebase -i
	s  = status
	t  = tag
	u  = pull --rebase
	ut = rm -r --cached
	w  = show
	wc = whatchanged -1
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[sendemail]
	confirm = always
	suppresscc = self
	thread = true
	chainreplyto = false
	bcc = adam8157@gmail.com
	smtpserver = /usr/bin/msmtp
	smtpserveroption = "--account=gmail"
